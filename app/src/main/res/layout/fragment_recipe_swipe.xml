<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView


        android:layout_width="392dp"
        android:layout_height="454dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/orange"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35">


        <ImageView


            android:id="@+id/image_view"


            android:layout_width="match_parent"


            android:layout_height="268dp"


            android:src="@drawable/imge" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="American Burger"
            android:textAlignment="center"
            android:textStyle="bold"
            android:translationY="265dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:text="The best American burgers are made with simple, fresh ingredients. The beef should be ground coarsely so that it's juicy and flavorful. The cheese should be melted perfectly so that it's gooey and delicious. And the toppings should be fresh and crisp, adding a pop of flavor and texture to the burger."
            android:textAlignment="textStart"
            android:translationX="5dp"
            android:translationY="280dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="432 Calories"
            android:translationX="5dp"
            android:translationY="430dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ground beef, cheese, lettuce, tomato, onion..."
            android:translationX="5dp"
            android:translationY="400dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGREDIENTS"
            android:translationX="5dp"
            android:translationY="380dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
